# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# TodoController Actions
GET     /todos                      controllers.Todo.index
POST    /todo                       controllers.Todo.create
GET     /todo/:id                   controllers.Todo.todo(id: Long)
POST    /todo/:id                   controllers.Todo.update(id: Long)
POST    /todo/:id/delete            controllers.Todo.delete(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
